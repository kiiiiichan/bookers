<h1>Books</h1>
<table >
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <div class="book-wrap">
      <% @books.each do |book| %>
      <div class="book_comment">
        <span class="book_title"><%= book.title %></span>
        <span class="book_body"><%= book.body %></span>
      </div>
    </div>
    <% end %>
</table>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>